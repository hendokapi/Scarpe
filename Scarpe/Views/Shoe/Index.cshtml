<h2>Le nostre scarpe sono le migliori</h2>

@if (Model.Count == 0)
{
    <h3>Non ne abbiamo al momento, sono andate a ruba</h3>
} else
{
    <div class="row row-cols-3">
        @foreach(var shoe in Model)
        {
            <div class="col">
                <div class="card">
                    <img src="..." class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@shoe.Name</h5>
                        <p class="card-text">@shoe.Description</p>
                        <a asp-controller="Shoe" asp-action="Details" asp-route-id="@shoe.ShoeId" class="btn btn-primary">Vai</a>
                    </div>
                </div>
            </div>
        }
    </div>
}