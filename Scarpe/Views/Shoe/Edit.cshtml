@model Shoe

<h2>Edit page</h2>

<form asp-controller="Shoe" asp-action="Edit" method="post">
    <input type="hidden" asp-for="@Model.ShoeId" />

    <div class="mb-3">
        <label class="form-label" asp-for="@Model.Name"></label>
        <input type="text" class="form-control" asp-for="@Model.Name">
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="@Model.Price"></label>
        <input type="number" class="form-control" asp-for="@Model.Price">
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="@Model.Description"></label>
        <textarea class="form-control" rows="3" asp-for="@Model.Description"></textarea>
    </div>

    <button class="btn btn-primary">Modifica</button>
</form>
